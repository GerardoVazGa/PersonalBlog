<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/home.css">
    
    <title>GeraBlog</title>
</head>
<body>
    <header class="header">
        <nav class="navbar-container">
                <div class="nav-logo">
                    <img src="..." alt="GeraBlog Logo">
                    <h1>GeraBlog</h1>
                </div>
                <div class="nav-links">
                    <a href="/" class="<%= current === 'home' ? 'active' : '' %>">Inicio</a>
                    <div class="dropdown">
                        <a class="dropbtn">Categoria</a>
                        <div class="dropdown-content">
                            <% categories.forEach(category => { %>
                                    <a 
                                        href="/category/<%= category %>" 
                                        class="<%= current === category ? 'active' : '' %>"
                                    > 
                                        <%= category %>
                                    </a>
                            <% }) %>
                        </div>
                    </div>
                    <a href="/about" class="<%= current === 'about' ? 'active' : '' %>">About</a>
                    <a href="/contact">Contact</a>

                    <div class="auth-buttons">
                        <% if(!isAdmin) { %>
                            <button class="loginBtn">
                                <i class="fa-solid fa-lock"></i>
                            </button>
                        <% } else { %>
                            <button class="logoutBtn active">
                                <i class="fa-solid fa-unlock"></i>
                            </button>
                        <% } %>
                    </div>
                </div>

                <div class="hambutton">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>


        </nav>
        <div class="mobile-nav">
            <div class="nav-item"><a href="/">Home</a></div>

            <div class="category-menu">
                <div class="nav-item category-btn-container">
                    <a class="category-btn">Categor√≠as</a>
                    <i class="fa-solid fa-caret-down"></i>
                </div>
                <div class="category-dropdown">
                    <% categories.forEach((category)=> { %>
                        <div class="dropdown-item">
                            <a href="/category/<%= category %>"><%= category %></a>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="nav-item"><a href="/about">About</a></div>
            <div class="nav-item"><a href="/contact">Contact</a></div>
            <div class="nav-item auth-buttons mobile-log-buttons">
                <% if(!isAdmin) { %>
                    <a class="loginBtn">Login</a>
                    <button class="loginBtn">
                        <i class="fa-solid fa-lock"></i>
                    </button>
                <% } else { %>
                    <a class="logoutBtn">Logout</a>
                    <button class="logoutBtn active">
                        <i class="fa-solid fa-unlock"></i>
                    </button>
                <% } %>
            </div>

    </header>