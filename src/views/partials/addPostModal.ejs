<div class="add-post-modal">
    <div class="modal-content">
        <h2>Add New Post</h2>
        <button class="close-modal-add-post">Close</button>
        <form id="form-add-post" action="/posts/add" enctype="multipart/form-data" method="POST">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="title" placeholder="Enter post title" required>
            </div>
            <div>
                <label for="post-content">Content:</label>
                <textarea id="post-content" name="content" rows="5" placeholder="Enter post content" required></textarea>
            </div>
            <div>
                <label for="post-image">Image:</label>
                <input type="file" id="post-image" name="image" accept="image/*" required>
            </div>
            <button class="sub">Add Post</button>

        </form>
    </div>
</div>