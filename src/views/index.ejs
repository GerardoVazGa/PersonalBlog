<%- include('partials/header.ejs') %>

<main class="main-content">
    <section id="hero">
        <div class="hero-image">
            GV
        </div>
        <h1 class="hero-title">
            Mi Nombre es Gerardo, ¡Bienvenido a mi Blog!
        </h1>
        <p class="hero-description">Desarrollador Web Full Stack con experencia en JavaScript, Node.js y Frameworks como React y Angular </p>
        <div class="hero-buttons">
            <button class="hero-btn">Leer mis articulos</button>
            <button class="hero-btn">Conoce más sobre mi</button>
        </div>
    </section>

    <section id="highlights-articles">
        <h2>Articulos Destacados</h2>

        <div class="highlighted-articles">
            <% posts.forEach(post => { %>
                <article class="highlighted-article">    
                    <figure class="highlighted-image">
                        <img src="/uploads/<%= post.image_url %>" alt="<%= post.title %>">
                    </figure>
                    <div class="highlighted-content">
                        <h3><%= post.title %></h3>
                        <p><%= post.content.substring(0, 100) %></p>
                        <a href="/posts/<%= post.slug %>" class="read-more">Leer más</a>
                    </div>
                </article>
            <% }) %>
        </div>

    </section>
    <div class="hello">Hola mundo</div>
</main>

