<%- include('partials/header.ejs') %>

<main class="main-content">
    <section id="hero">
        <div class="hero-image">
            GV
        </div>
        <h1 class="hero-title">
            Mi Nombre es Gerardo, ¡Bienvenido a mi Blog!
        </h1>
        <p class="hero-description">Desarrollador Web Full Stack con experencia en JavaScript, Node.js y Frameworks como React y Angular </p>
        <div class="hero-buttons">
            <button class="hero-btn">Leer mis articulos</button>
            <button class="hero-btn">Conoce más sobre mi</button>
        </div>
    </section>

    <section id="highlights-articles">
        <h2 class="highlighted-articles-title">Articulos Destacados</h2>

        <div class="highlighted-articles">
            <% posts.forEach(post => { %>
                <article class="highlighted-article">    
                    <figure class="highlighted-image">
                        <img src="/uploads/postsFiles/<%= post.image_url %>" alt="<%= post.title %>" class="highlighted-img">
                    </figure>
                    <div class="highlighted-content">
                        <h3><%= post.title %></h3>
                        <div class="highlighted-article-text"> <%= post.preview %> </div>
                        <div class="highlighted-info">
                            <a href="/posts/<%= post.slug %>" class="read-more">Leer más</a>
                            <% if(isAdmin) { %>
                                <div class="buttons">
                                    <button class="btn-edit" data-post-id="<%= post.id  %>">
                                        <svg class="edit-icon" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 512 512"><path fill="currentColor" d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1L377.9 88L407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9l46.1 46.1l-134.3 134.2c-2.9 2.9-6.5 5-10.4 6.1L186.9 325l16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25c-28.1-28.1-73.7-28.1-101.8 0M88 64c-48.6 0-88 39.4-88 88v272c0 48.6 39.4 88 88 88h272c48.6 0 88-39.4 88-88V312c0-13.3-10.7-24-24-24s-24 10.7-24 24v112c0 22.1-17.9 40-40 40H88c-22.1 0-40-17.9-40-40V152c0-22.1 17.9-40 40-40h112c13.3 0 24-10.7 24-24s-10.7-24-24-24z"/></svg>
                                    </button>
                                    <button class="btn-delete" data-post-id="<%= post.id  %>">
                                        <svg class="delete-icon" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M7 21q-.825 0-1.412-.587T5 19V6H4V4h5V3h6v1h5v2h-1v13q0 .825-.587 1.413T17 21zM17 6H7v13h10zM9 17h2V8H9zm4 0h2V8h-2zM7 6v13z"/></svg>
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </article>
            <% }) %>
        </div>

    </section>
    <div class="hello">Hola mundo</div>
</main>

